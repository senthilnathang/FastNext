# FastVue Framework Configuration

# Environment
ENVIRONMENT=development
DEBUG=true

# Application
PROJECT_NAME=FastVue Framework
VERSION=1.0.0
API_V1_STR=/api/v1

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=11520

# Database - PostgreSQL
POSTGRES_SERVER=localhost
POSTGRES_PORT=5432
POSTGRES_USER=fastvue
POSTGRES_PASSWORD=fastvue123
POSTGRES_DB=fastvue

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Cache
CACHE_ENABLED=true
CACHE_DEFAULT_TTL=300

# CORS
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000,http://127.0.0.1:5173

# OAuth2 Social Authentication
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=

# OAuth Redirect URLs
OAUTH_REDIRECT_URL=http://localhost:3000/auth/callback

# Two-Factor Authentication
TWO_FACTOR_ISSUER=FastVue

# Email/SMTP (for password reset, notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_TLS=true
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@fastvue.com
SMTP_FROM_NAME=FastVue Framework

# Logging
LOG_LEVEL=INFO
ACTIVITY_LOGGING_ENABLED=true
AUDIT_TRAIL_ENABLED=true

# Performance
WORKERS=1
MAX_CONNECTIONS=1000
