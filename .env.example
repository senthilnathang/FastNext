# FastNext Framework Environment Configuration

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
POSTGRES_DB=fastnext
POSTGRES_USER=fastnext
POSTGRES_PASSWORD=secure_password_change_me
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# ===========================================
# REDIS CONFIGURATION
# ===========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_secure_password_change_me
REDIS_DB=0

# ===========================================
# APPLICATION SECRETS
# ===========================================
SECRET_KEY=super_secret_key_change_in_production_min_32_chars
JWT_SECRET=jwt_secret_key_change_in_production

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
ENVIRONMENT=development
DEBUG=true
API_V1_STR=/api/v1

# Cache settings
CACHE_ENABLED=true
CACHE_DEFAULT_TTL=300

# Performance settings
BACKEND_WORKERS=4
BACKEND_REPLICAS=2
FRONTEND_REPLICAS=2

# ===========================================
# CORS CONFIGURATION
# ===========================================
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,https://yourdomain.com

# ===========================================
# FRONTEND CONFIGURATION
# ===========================================
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_ENVIRONMENT=development

# ===========================================
# SSL/TLS CONFIGURATION (Production)
# ===========================================
SSL_KEYFILE=/path/to/ssl/private.key
SSL_CERTFILE=/path/to/ssl/certificate.crt

# ===========================================
# BACKUP CONFIGURATION
# ===========================================
S3_BACKUP_BUCKET=your-backup-bucket
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-west-2

# ===========================================
# MONITORING CONFIGURATION
# ===========================================
GRAFANA_PASSWORD=secure_grafana_password

# ===========================================
# EMAIL CONFIGURATION (Optional)
# ===========================================
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAILS_FROM=noreply@yourdomain.com

# ===========================================
# LOGGING CONFIGURATION
# ===========================================
LOG_LEVEL=info
ENABLE_METRICS=true

# ===========================================
# RATE LIMITING
# ===========================================
RATE_LIMIT_ENABLED=true
REQUESTS_PER_MINUTE=60
REQUESTS_PER_HOUR=1000

# ===========================================
# SECURITY SETTINGS
# ===========================================
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com
SECURE_COOKIES=false  # Set to true in production with HTTPS
SESSION_TIMEOUT_MINUTES=60

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================
# Set to true for hot reload in development
RELOAD=true
# Set to true for auto database initialization
AUTO_INIT_DB=true
