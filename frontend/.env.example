# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000

# Application Configuration
NEXT_PUBLIC_APP_NAME="FastNext Framework"
NEXT_PUBLIC_APP_VERSION="1.0.0"

# Development Configuration
NODE_ENV=development

# Security Configuration
# Set to 'true' to bypass HTTPS requirement for cookies in production environments
# WARNING: Only use this for development/testing - never in actual production
BYPASS_HTTPS_CHECK=false

# Set to 'true' to bypass XSS detection (automatically enabled in development)
# WARNING: Only use this for development/testing - never in actual production
BYPASS_XSS_DETECTION=false

# Set to 'true' to bypass rate limiting (automatically enabled in development)
# WARNING: Only use this for development/testing - never in actual production
BYPASS_RATE_LIMIT=false

# Set to 'true' to disable security monitoring entirely (automatically disabled in development)
# WARNING: Only use this for development/testing - never in actual production
DISABLE_SECURITY_MONITORING=false

# Set to 'true' to skip security violation reporting (automatically enabled in development)
# WARNING: Only use this for development/testing - never in actual production
SKIP_SECURITY_VIOLATIONS=false

# Set to 'true' to skip CSP for /api/v1/login endpoint (automatically enabled in development)
# WARNING: Only use this for development/testing - never in actual production
SKIP_CSP_LOGIN=false

# Set to 'true' to force secure cookies even in development
FORCE_SECURE_COOKIES=false
